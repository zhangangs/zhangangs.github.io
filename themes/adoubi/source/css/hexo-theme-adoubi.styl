@import "highlight"

body
  /*font-family Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace*/
  -webkit-font-smoothing antialiased
  display flex
  flex-flow column
  min-height 100vh
  height 100vh

h1
  font-size 50px
  font-weight 200
  line-height 1.0625

h2
  font-size 42px
  line-height 1.07885
  font-weight 200

h3
  font-size 36px
  line-height 1.1
  font-weight 300

h4
  font-size 32px
  line-height 1.1
  font-weight 300

h5
  font-size 26px
  line-height 1.1
  font-weight 400

h6
  font-size 22px
  line-height 1.1
  font-weight 400

h1,h2,h3,h4,h5,h6
  margin 30px 0

a
  color: #3f51b5

.content
  flex 1
  font-size 14px
  line-height 1.7375
  letter-spacing 0.018em
  /*font-weight 300*/
  margin 0 auto
  width 40%
  color: #333
  img
    max-width 100%

.header
  margin-top 20vh
  text-align center
  h3
    margin 20px 0
  > a
    margin 10px 10px 0
    display inline-block
    font-family sans-serif
    font-size 16px
    font-weight 300
  &__title
    img
      width 100px
      height 100px
      border-radius 50%
    h3
      letter-spacing .1em
    p
     color #666

.footer
  text-align center
  color #999
  margin 0 auto
  font-size 12px
  letter-spacing 0.03em
  width 100%
  height 5%
  left 0
  padding-top 20px
  padding-bottom 20px
  a
    color #555
.post
  width 55%
  .author-info img
    width 45px
    height 45px
.post-title-wrapper
  margin-top 0
  margin-bottom 2%

.post-title
  margin-top 0
  color #333
  text-decoration none
  font-size 28px

.post-date
  margin-top -.8em;
  margin-bottom 2em
  padding-bottom .8em
  color #999
  border-bottom 1px dashed #ddd
  font-size 13px
  p
    margin 0 6px 0 0
    display inline-block
    a
      text-decoration:none
    a:hover
      color #e71

.post-content
  h1,h2,h3,h4,h5,h6
    margin-top: 1.2em
    margin-bottom: 1em
    font-weight normal
  h1 
    font-size 22px
  h2  
    font-size 20px
  h3
    font-size 18px
  h4
    font-size 16px
  h5,h6
    font-size 14px
  a
    text-decoration:none
  a:hover
    color #e71

.author-info
  margin-top 4%
  margin-bottom 2%
  a
    position relative
    display inline-block
    vertical-align middle
  img
    width 60px
    height 60px
    border-radius 50%
  .info
    display inline-block
    margin-left 15px
    vertical-align middle
    .name
      margin 0
      font-size 22px
      letter-spacing .1em
    .slogan
      margin-top 4px
      color #777

.post
  .author-info
    a:after
      content ""
      position absolute
      width 3px
      height 30px
      top -30px
      left 50%
      background #eee

.archive-item
  border-bottom 1px dashed #ddd
  div
    padding 1.6% 1%
    transition all .3s linear;
  &__link
    color #555
    text-decoration none
    &__time
      letter-spacing -0.02em
      display inline-block
      float right
      color #999
      font-size 13px
    &__title:hover
      color #3f51b5
      text-decoration none    

code
  color: #c7254e
  border-radius: 1px
  background-color #f9f2f4
  font-size 90%
  padding 0 4px

.page-navigator
  margin-top 3%
.page-number,.prev
  margin-right 10px
  font-size 16px


@media screen and (max-width 768px)
  .post,.content
    width 96%
  .archive-item__link__time
    display none
  .archive-item__link__title
    margin-left 0
  .header > a
    margin-right 5px

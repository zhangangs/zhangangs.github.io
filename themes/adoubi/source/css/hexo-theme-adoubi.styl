@import "highlight"

body
  font-family Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace
  -webkit-font-smoothing antialiased
  display flex
  flex-flow column
  min-height 100vh
  height 100vh

h1
  font-size 50px
  font-weight 200
  line-height 1.0625

h2
  font-size 42px
  line-height 1.07885
  font-weight 200

h3
  font-size 36px
  line-height 1.1
  font-weight 300

h4
  font-size 32px
  line-height 1.1
  font-weight 300

h5
  font-size 26px
  line-height 1.1
  font-weight 400

h6
  font-size 22px
  line-height 1.1
  font-weight 400

h1,h2,h3,h4,h5,h6
  margin 30px 0

a
  color: #3f51b5

.content
  flex 1
  font-size 14px
  line-height 1.7375
  letter-spacing 0.018em
  font-weight 300
  margin 0 auto
  width 40%
  color: #444
  img
    max-width 100%

.header
  margin-top 20vh
  text-align center
  h3
    margin 20px 0
  > a
    margin 10px 10px 0
    display inline-block
    font-family sans-serif
    font-size 16px
  &__title
    img
      width 100px
      height 100px
      border-radius 50%
    h3
      letter-spacing .1em

.footer
  text-align center
  color #999
  margin 0 auto
  font-size 12px
  letter-spacing 0.03em
  width 100%
  height 5%
  left 0
  padding-top 20px
  padding-bottom 20px
  a
    color #555
.post
  width 55%
  .author-info img
    width 45px
    height 45px
.post-title-wrapper
  margin-bottom 2%

.post-title
  margin-top 0
  color #333
  text-decoration none

.post-date
  margin-top -20px
  padding-bottom 10px
  color #999
  border-bottom 1px dotted #ddd
  p
   margin 0 14px 0 0
   display inline-block

.author-info
  margin-top 4%
  margin-bottom 4%
  a
    position relative
    display inline-block
    vertical-align middle
  img
    width 60px
    height 60px
    border-radius 50%
  .info
    display inline-block
    margin-left 15px
    vertical-align middle
    .name
      margin 0
      font-size 22px
      letter-spacing .1em
    .slogan
      margin-top 4px
.post
  .author-info
    a:after
      content ""
      position absolute
      width 3px
      height 30px
      top -30px
      left 50%
      background #eee

.archive-item
  div
    margin-top 3%
    margin-bottom 3%
  &__link
    color #555
    text-decoration none
    &__time
      letter-spacing -0.02em
      display inline-block
      width 15%
      min-width 75px
    &__title
      display inline
      color #292929
      margin-left 5%
    &__title:hover
      color #3f51b5
      text-decoration underline

code
  color: #3f51b5;
  border-radius: 1px;

.page-number,.prev
  margin-right 10px
  font-size 16px


@media screen and (max-width 768px)
  .post,.content
    width 96%
  .archive-item__link__time
    display none
  .archive-item__link__title
    margin-left 0
  .header > a
    margin-right 5px

$highlight-background   = #f9f8fc
$highlight-current-line = #efefef
$highlight-selection    = #d6d6d6
$highlight-foreground   = #4d4d4c
$highlight-comment      = #8e908c
$highlight-red          = #c82829
$highlight-orange       = #f5871f
$highlight-yellow       = #eab700
$highlight-green        = #718c00
$highlight-aqua         = #3e999f
$highlight-blue         = #4271ae
$highlight-purple       = #8959a8
$highlight-deletion     = #fdd
$highlight-addition     = #dfd
$code-font-family       = Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace
$code-font-size         = 1.35rem
$line-height-code-block = 1.42857143

$code-block
  overflow auto
  margin 1.2em 0
  padding 1rem
  font-size $code-font-size;
  color $highlight-foreground;
  background $highlight-background
  line-height $line-height-code-block

pre, code
  font-family $code-font-family

code
  color: #dc3c64
  border-radius: 1px
  background-color #fdf6f8
  font-size 90%
  padding 0 .4rem

pre
  @extend $code-block

  code
    padding 0
    color $highlight-foreground
    background none
    text-shadow none

.highlight
  @extend $code-block
  pre
    border none
    margin 0
    padding 1px

  table
    margin 0
    width auto
    border none

  td
    border none
    padding 0

  figcaption
    clearfix()
    font-size 1em;
    color $highlight-foreground
    line-height 1em
    margin-bottom 1em

    a
      float right
      color $highlight-foreground

      &:hover
        border-bottom-color $highlight-foreground

  .gutter pre
    text-align right
    padding-right 1rem

  .line
    height 2rem

.highlight.html
  .name
    color $highlight-purple

.highlight.css
  .selector-class
    color $highlight-orange

.gutter
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  display none

.gist table
  width auto

  td
    border none

// For diff highlight
pre .deletion
  background $highlight-deletion
pre .addition
  background $highlight-addition
pre .meta
  color $highlight-purple

pre
  .comment
    color $highlight-comment

  .variable
  .attribute
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo
    color $highlight-purple

  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
  .command
  .builtin-name
  .attr
    color $highlight-orange

  .ruby .class .title
  .css .rules .attribute
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
  .special
  .number
  .formula
    color $highlight-green

  .title
  .css .hexcolor
    color $highlight-aqua

  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title
    color $highlight-blue

  .keyword
  .javascript .function
    color $highlight-purple
  
  .string
    color $highlight-green     

- var pageTitle = page.title
- if (pageTitle)
  - pageTitle = pageTitle + "-" + config.title
- else
  - pageTitle = config.title

doctype html
html(lang=config.language)
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    meta(name='apple-mobile-web-app-title' content=config.title)
    meta(name='apple-mobile-web-app-capable' content='yes')
    meta(name='apple-mobile-web-app-status-bar-style' content='#f0f0f0')
    meta(name='theme-color' content='#ffffff')
    link(rel="manifest", href=config.root + 'manifest.json')
    meta(name='keywords', content=config.keywords)
    meta(name='description', content=config.description)
    title=pageTitle
    link(rel="apple-touch-icon", href=config.root + 'images/android-chrome-192x192.png')
    link(rel='stylesheet', href='/css/normalize.css')
    if theme.stylesheets !== undefined && theme.stylesheets.length > 0
      each url in theme.stylesheets
        link(rel='stylesheet', href=url)
    link(rel="icon", href=config.root + 'images/favicon.ico')
  body
    block content
    div.footer
